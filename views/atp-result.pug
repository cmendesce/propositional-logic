extends layout

block content
  
  div(class='content')
    br
    a(class='pure-button', href='/atp/index') < Prove other theorem
    p Result of #{proof.question} âŠ¢ {#{proof.premises}} 
      if proof.solved
        span(class="message success") Proved
      else
        span(class="message error") Not proved
    
    if proof
      div(class="pure-g")
        div(class="pure-u-1-2")
          table(class="pure-table pure-table-bordered")
            thead
              tr
                td #
                td Clauses
            tbody
              each item, index in proof.clauses
                tr
                  td=index + 1
                  td=item
        div(class="pure-u-1-2")
          table(class="pure-table pure-table-bordered")
            thead
              tr
                td #
                td Resolvent
                td Clauses
            tbody
              each item, index in proof.resolvents
                tr
                  td=index + 1
                  td=item.resolvent
                  td (#{item.i}, #{item.j})
