extends layout

block content
  br
  a(class='pure-menu-link', href='/atp/index') < Back
  div(class='content')
    p Result of #{proof.question} âŠ¢ {#{proof.premises}}
    
    if proof
      div(class="pure-g")
        div(class="pure-u-1-2")
          table(class="pure-table")
            thead
              tr
                td #
                td Clauses
            tbody
              each item, index in proof.clauses
                tr
                  td=index + 1
                  td=item
        div(class="pure-u-1-2")
          table(class="pure-table")
            thead
              tr
                td #
                td Resolvent
                td Clauses
            tbody
              each item, index in proof.resolvents
                tr
                  td=index + 1
                  td=item.resolvent
                  td (#{item.i}, #{item.j})
