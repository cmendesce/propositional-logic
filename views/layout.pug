doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://unpkg.com/purecss@0.6.0/build/pure-min.css')
    <!--[if lte IE 8]>
      link(rel="stylesheet" href="/stylesheets/side-menu-old-ie.css")
    <![endif]-->
    <!--[if gt IE 8]><!-->
        link(rel="stylesheet" href="/stylesheets/side-menu.css")
    <!--<![endif]-->
    <!--[if lt IE 9]>
        script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.js")
    <![endif]-->
  body
    div(id='layout')
      a(id='menuLink' class='menu-link' href='#menu')
        span
      div(id='menu')
        div(class='pure-menu')
          a(class='pure-menu-heading', href='#') PL Tools
          mixin item(text, link)
            li(class='pure-menu-item')
              a(class='pure-menu-link', href=link)=text
          ul(class='pure-menu-list')
            +item('Home', '/')
            +item('About', '/about')
            +item('Abstract Syntax Tree', '/ast')
            +item('Conjuntive Normal Form', '/cnf')
      div(id='main')
        div(class='header')
          h1=title
          if subtitle !== ''
            h2= subtitle
        div(class='content')
          block content
  script(src='/javascripts/ui.js')
  block scripts